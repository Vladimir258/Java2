<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ru.geekbrains.Controller">

    <TextArea fx:id="dialogArea" editable="false" VBox.vgrow="ALWAYS" />

    <HBox>
        <TextField fx:id="sendText" onAction="#keyEnterSend" HBox.hgrow="ALWAYS" />
        <Button fx:id="sendButton" onAction="#btnOneClickAction" text="Send" />
    </HBox>

</VBox>
